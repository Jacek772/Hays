            <div class="container-fluid">
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800">Settings</h1>
                </div>

                <div class="row">
                    <div class="col-xl-6">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3 px-4 d-flex flex-row align-items-center justify-content-between">
                                <h6 class="m-0 font-weight-bold text-grass">Account</h6>
                            </div>

                            <div class="p-3 mx-3 d-flex flex-row align-items-center justify-content-end border-bottom-gray">
                            </div>

                            <div class="card-body">
                                <table id="tableUserData">
                                    <thead>
                                    </thead>
                                    <tbody id="tbodyUserData">

                                    </tbody>
                                </table>
                               
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-6">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3 px-4 d-flex flex-row align-items-center justify-content-between">
                                <h6 class="m-0 font-weight-bold text-grass">Change password</h6>
                            </div>

                            <div class="card-body">
                                <form id="changePasswordForm" class="form-io">
                                    <div class="col-12">
                                        <input type="password"
                                            class="form-control form-control-add-io my-2"
                                            id="changePasswordPasswordInput"
                                            required="required" />
                                    </div>
                                    <div class="col-12">
                                        <input type="password"
                                            class="form-control form-control-add-io my-2"
                                            id="changePasswordReppasswordInput"
                                            required="required" />
                                    </div>
                                    <div id="changePasswordAlert" class="alert alert-danger w-100" style="display: none;">
                                    </div>
                                    <div class="col-12 text-center">
                                        <button type="submit" class="btn btn-primary">Save</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-6">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3 px-4 d-flex flex-row align-items-center justify-content-between">
                                <h6 class="m-0 font-weight-bold text-grass">Outcome definitions</h6>
                            </div>

                            <div class="card-body">
                                <form id="addExpenseDefinitionForm" class="form-io">
                                    <div class="row align-items-center">
                                        <div class="col-10">
                                            <input type="text"
                                                   class="form-control form-control-add-io my-2"
                                                   id="addExpenseDefinitionNameInput"
                                                   placeholder="new outcome definition name..."
                                                   required="required" />
                                        </div>

                                        <div class="col-2 text-center">
                                            <button type="submit" class="btn btn-primary">Add</button>
                                        </div>
                                    </div>
                                </form>

                                <div class="table-responsive mt-5">
                                    <table class="table table-bordered"
                                           id="expenseDefinitionsTable"
                                           width="100%"
                                           cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody id="expenseDefinitionsTableBody">

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-6">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3 px-4 d-flex flex-row align-items-center justify-content-between">
                                <h6 class="m-0 font-weight-bold text-grass">Income definitions</h6>
                            </div>

                            <div class="card-body">
                                <form id="addIncomeDefinitionForm" class="form-io">
                                    <div class="row align-items-center">
                                        <div class="col-10">
                                            <input type="text"
                                                   class="form-control form-control-add-io my-2"
                                                   id="addIncomeDefinitionNameInput"
                                                   placeholder="new income definition name..."
                                                   required="required" />
                                        </div>
                                        <div class="col-2 text-center">
                                            <button type="submit" class="btn btn-primary">Add</button>
                                        </div>
                                    </div>
                                </form>

                                <div class="table-responsive mt-5">
                                    <table class="table table-bordered"
                                           id="incomeDefinitionsTable"
                                           width="100%"
                                           cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody id="incomeDefinitionsTableBody">
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade"
         id="logoutModal"
         tabindex="-1"
         role="dialog"
         aria-labelledby="logoutModal"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Select "Log Out" below if you are ready to end your current session.</p>
                </div>
                <div class="modal-footer">
                    <button id="btnLogout" type="button" class="btn btn-brick" data-dismiss="modal">Log Out</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade modal-io"
         id="successModal"
         tabindex="-1"
         role="dialog"
         aria-labelledby="successModal"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content px-3">
                <div class="modal-header pt-4">
                    <h5 class="modal-title text-grass">Success</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body pt-3">
                    <button class="btn btn-success" data-dismiss="modal">Ok</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="~/js/utils.js"></script>
    <script type="text/javascript" src="~/js/settings.js"></script>
}
